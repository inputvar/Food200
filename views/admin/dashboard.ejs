<main>
  <%- include('../partials/adminSidebar') %>

  <div id="main-wrapper">
    <div class="bg-white shadow-sm p-3">
      <span class="me-3" id="sidebar-toggler-btn"
        ><i class="fas fa-bars"></i
      ></span>
      <h5 class="m-0 color-theme d-inline-block">Dashboard</h5>
    </div>

    <div class="d-flex gap-3 flex-wrap m-4 text-white">
      <div
        class="bg-primary rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(0, 123, 255) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numAdmins %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">admins</div>
      </div>

      <div
        class="bg-success rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(40, 167, 69) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numDonors %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">donors</div>
      </div>

      <div
        class="bg-primary rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(0, 123, 255) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numAgents %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">agents</div>
      </div>

      <div
        class="bg-success rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(40, 167, 69) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numPendingDonations %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">new donation requests</div>
      </div>

      <div
        class="bg-warning rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(255, 193, 7) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numAcceptedDonations %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">donations to be assigned to agent</div>
      </div>

      <div
        class="bg-danger rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(220, 53, 69) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numAssignedDonations %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">donations not collected yet</div>
      </div>

      <div
        class="bg-success rounded p-3"
        style="
          width: 250px;
          background-color: rgb(228, 228, 228) !important;
          border: 2px solid rgba(40, 167, 69) !important;
        "
      >
        <div class="fs-1" style=" color: #141E46;"><%= numCollectedDonations %></div>
        <div class="fs-5" style="font-size: 1.25rem !important; color: #141E46;">donations collected</div>
      </div>
    </div>
  </div>
</main>
